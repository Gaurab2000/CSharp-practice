using System;

class Gaurab
{
    public int Add(int a, int b)
    {
        int sum = a + b;
        return sum;
    }
    public int Add(int a, int b, int c)
    {
        int sum = a + b + c;
        return sum;

    }
    public static void Main(string[] args)
    {
        Gaurab g = new Gaurab();
        int sum1 = g.Add(1, 2);
        Console.WriteLine("sum of the three" + "integer value:" + sum1);
        int sum2 = g.Add(1, 2, 3);
        Console.WriteLine("sum of the three" + "integer value:" + sum2);
        Console.ReadLine();

    }
}
